@model UniversalReportCore.Ui.ViewModels.FieldValueDisplayViewModel
@{
    var fieldVal = Model.GetValue();
    var propertyType = fieldVal?.GetType() ?? typeof(object);
    var formatter = Model.ColumnDefinition?.FieldFormatter;
    var formattedValue = formatter != null && fieldVal != null
        ? Model.FormatFieldValue(fieldVal, formatter)
        : (fieldVal != null ? Model.FormatFieldValue(fieldVal, propertyType) : string.Empty);
}
@formattedValue